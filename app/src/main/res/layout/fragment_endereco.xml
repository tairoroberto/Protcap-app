<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativePaiFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeFragment2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">



            <Button
                android:id="@+id/btnSalvarFragment"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/botao_vermelho"
                android:fontFamily="serif"
                android:text="SALVAR"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnSairFragment"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/botao_vermelho"
                android:fontFamily="serif"
                android:text="SAIR"
                android:textSize="25sp"
                android:layout_toRightOf="@+id/chLembrarFragment"
                android:layout_toEndOf="@+id/chLembrarFragment"
                android:layout_weight="1"
                android:textColor="#ffffff" />

        </LinearLayout>

        <EditText
            android:id="@+id/edtEnderecoLink"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="serif"
            android:textColor="@color/red_crimson"
            android:textSize="20sp"
            android:hint="http://endereco_do_servidor/intranet/public/"
            android:textColorHint="#000000"
            android:gravity="center"
            android:background="#ffffff"
            android:inputType="text"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp">


        </EditText>

    </RelativeLayout>

</RelativeLayout>